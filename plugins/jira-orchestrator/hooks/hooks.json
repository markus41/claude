{
  "$schema": "../../schemas/hooks.schema.json",
  "hooks": [
    {
      "event": "UserPromptSubmit",
      "matcher": "\\b[A-Z]{2,10}-\\d+\\b",
      "type": "command",
      "script": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/detect-jira-issue.sh",
      "settings": {
        "timeout": 5000
      }
    },
    {
      "event": "PostToolUse",
      "matcher": "jira_get_issue|getJiraIssue|mcp__atlassian__getJiraIssue",
      "type": "command",
      "script": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/triage-trigger.sh",
      "settings": {
        "timeout": 5000
      }
    },
    {
      "event": "PreToolUse",
      "matcher": "harness_deploy|harness_create_deployment|execute_pipeline|harness_create_pull_request",
      "type": "command",
      "script": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/review-gate.sh",
      "settings": {
        "timeout": 10000
      }
    },
    {
      "event": "PreToolUse",
      "matcher": "harness_deploy|harness_create_deployment|execute_pipeline|harness_create_pull_request",
      "type": "command",
      "script": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/pr-size-guard.sh main",
      "settings": {
        "timeout": 10000
      }
    },
    {
      "event": "Stop",
      "type": "command",
      "script": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/docs-reminder.sh",
      "settings": {
        "timeout": 5000
      }
    },
    {
      "event": "SessionStart",
      "type": "command",
      "script": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/session-resume.sh",
      "settings": {
        "timeout": 5000
      }
    }
  ],
  "settings": {
    "description": "Jira Orchestrator Plugin Hooks - Automated workflow triggers for Jira integration"
  }
}