{
  "mcpServers": {
    "atlassian": {
      "command": "npx",
      "args": [
        "-y",
        "dotenv-cli",
        "-e", ".env",
        "--",
        "npx",
        "-y",
        "@anthropic-ai/mcp-atlassian",
        "--jira-url", "${ATLASSIAN_INSTANCE_URL}",
        "--jira-email", "${ATLASSIAN_EMAIL}",
        "--jira-token", "${ATLASSIAN_API_TOKEN}",
        "--confluence-url", "${ATLASSIAN_INSTANCE_URL}/wiki",
        "--confluence-email", "${ATLASSIAN_EMAIL}",
        "--confluence-token", "${ATLASSIAN_API_TOKEN}"
      ],
      "description": "Atlassian Jira & Confluence MCP with API Token auth loaded from local .env file"
    }
  },
  "envFile": ".env",
  "envRequired": [
    "ATLASSIAN_INSTANCE_URL",
    "ATLASSIAN_EMAIL",
    "ATLASSIAN_API_TOKEN"
  ],
  "setup": {
    "instructions": "Copy .env.example to .env and fill in your Atlassian credentials",
    "envExample": ".env.example",
    "tokenUrl": "https://id.atlassian.com/manage-profile/security/api-tokens"
  }
}
