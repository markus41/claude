{
  "version": "6.0.0",
  "description": "Jira Orchestrator - 12 primary commands + hook-based automation (40→12 consolidation)",
  "prefix": "/jira:",
  "total_commands": 12,
  "philosophy": "Fewer commands, more automation. Most operations auto-trigger via hooks.",

  "primary_commands": {
    "work": {
      "desc": "Start orchestrated work on issue (THE main command)",
      "args": "ISSUE-KEY [--triage] [--prepare] [--depth]",
      "auto_triggers": ["create-branch", "triage-if-needed", "prepare-subtasks"],
      "phases": "EXPLORE → PLAN → CODE → TEST → FIX → DOCUMENT"
    },
    "ship": {
      "desc": "One command: prepare → code → PR → review → merge",
      "args": "ISSUE-KEY [--council] [--auto-merge]",
      "includes": ["work", "pr", "review", "iterate"]
    },
    "status": {
      "desc": "Check progress, show dashboard, metrics",
      "args": "[ISSUE-KEY] [--format=dashboard|json]"
    },
    "pr": {
      "desc": "Create/manage PRs with automatic review",
      "args": "ISSUE-KEY [--draft] [--review] [--council] [--harness]",
      "auto_triggers": ["auto-review", "link-docs", "add-labels"]
    },
    "iterate": {
      "desc": "Fix review feedback, update PR, re-review",
      "args": "ISSUE-KEY [--auto]"
    },
    "cancel": {
      "desc": "Cancel with checkpoint for resume",
      "args": "ISSUE-KEY [--reason] [--checkpoint]"
    },
    "sprint": {
      "desc": "Sprint planning, metrics, quality, team capacity",
      "args": "ACTION [options]",
      "subcommands": ["plan", "metrics", "quality", "team"]
    },
    "enterprise": {
      "desc": "Enterprise features (notifications, approvals, compliance)",
      "args": "ACTION [options]",
      "subcommands": ["notify", "approve", "portfolio", "release", "batch", "export", "sla", "compliance"]
    },
    "infra": {
      "desc": "Infrastructure and repository management",
      "args": "ACTION [options]",
      "subcommands": ["create-repo", "deploy", "pipeline", "status"]
    },
    "setup": {
      "desc": "Installation, configuration, hooks",
      "args": "[--hooks] [--verify] [--reset]"
    },
    "sync": {
      "desc": "Manual sync (usually auto via hooks)",
      "args": "[ISSUE-KEY] [--force]"
    },
    "help": {
      "desc": "Show commands and documentation",
      "args": "[COMMAND]"
    }
  },

  "aliases": {
    "description": "Backward compatibility - old commands redirect to new structure",
    "mappings": {
      "triage": {"target": "work --triage", "deprecated": true},
      "prepare": {"target": "work --prepare", "deprecated": true},
      "branch": {"target": "work", "note": "Auto-created on work start", "deprecated": true},
      "commit": {"target": "hooks", "note": "Auto via pre-commit hook", "deprecated": true},
      "commit-template": {"target": "hooks", "note": "Auto via pre-commit hook", "deprecated": true},
      "review": {"target": "pr --review", "deprecated": true},
      "council": {"target": "pr --council", "deprecated": true},
      "harness-review": {"target": "pr --harness", "deprecated": true},
      "docs": {"target": "hooks", "note": "Auto via post-merge hook", "deprecated": true},
      "confluence": {"target": "hooks", "note": "Auto via hooks", "deprecated": true},
      "sprint-plan": {"target": "sprint plan", "deprecated": true},
      "metrics": {"target": "sprint metrics", "deprecated": true},
      "quality": {"target": "sprint quality", "deprecated": true},
      "team": {"target": "sprint team", "deprecated": true},
      "notify": {"target": "enterprise notify", "deprecated": true},
      "approve": {"target": "enterprise approve", "deprecated": true},
      "portfolio": {"target": "enterprise portfolio", "deprecated": true},
      "release": {"target": "enterprise release", "deprecated": true},
      "batch": {"target": "enterprise batch", "deprecated": true},
      "export": {"target": "enterprise export", "deprecated": true},
      "sla": {"target": "enterprise sla", "deprecated": true},
      "compliance": {"target": "enterprise compliance", "deprecated": true},
      "create-repo": {"target": "infra create-repo", "deprecated": true},
      "deploy": {"target": "infra deploy", "deprecated": true},
      "install-hooks": {"target": "setup --hooks", "deprecated": true},
      "process-worklogs": {"target": "hooks", "note": "Auto via scheduled hook", "deprecated": true},
      "events": {"target": "hooks", "note": "Auto-logged", "deprecated": true},
      "bulk-commit": {"target": "enterprise batch", "deprecated": true},
      "plan-prs": {"target": "work --prepare", "deprecated": true},
      "qa-review": {"target": "pr --review", "deprecated": true},
      "orchestrate-advanced": {"target": "work", "deprecated": true}
    }
  },

  "hooks": {
    "description": "Auto-triggered operations (no explicit commands needed)",
    "config_file": "hooks/orchestration-hooks.json",
    "categories": {
      "git_hooks": ["pre-commit", "post-commit", "pre-push", "post-merge"],
      "orchestration_hooks": ["on-work-start", "on-phase-complete", "on-pr-create", "on-pr-merge"],
      "scheduled_hooks": ["daily", "weekly"]
    },
    "replaces_commands": [
      "branch", "commit", "commit-template", "docs", "confluence",
      "sync", "process-worklogs", "notify", "release"
    ]
  },

  "quick_reference": {
    "daily": ["work", "status", "pr", "iterate"],
    "shipping": ["ship"],
    "planning": ["sprint plan", "sprint metrics"],
    "enterprise": ["enterprise notify", "enterprise compliance"],
    "infrastructure": ["infra create-repo", "infra deploy"]
  },

  "migration": {
    "from_version": "5.1.0",
    "to_version": "6.0.0",
    "commands_reduced": "40 → 12",
    "breaking_changes": false,
    "aliases_maintained": true
  },

  "load_pattern": "commands/{command-name}.md"
}
