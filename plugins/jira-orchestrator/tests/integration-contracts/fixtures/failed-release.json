{
  "scenario": "failed-release",
  "jira": {
    "requiredFields": [
      "summary",
      "description",
      "fixVersions",
      "assignee"
    ],
    "fields": {
      "summary": "Release 7.5.1 deployment failed",
      "description": "Deploy failed in smoke tests",
      "fixVersions": [
        "7.5.1"
      ],
      "assignee": "release-bot"
    },
    "requiredProperties": [
      "release.type",
      "release.window",
      "harness.executionId"
    ],
    "properties": {
      "release.type": "failed",
      "release.window": "weekly",
      "harness.executionId": "exec-1002"
    }
  },
  "automation": {
    "templateName": "release-failure-handler",
    "requiredSteps": [
      "capture-logs",
      "notify-owners",
      "mark-failed"
    ],
    "steps": [
      {
        "id": "capture-logs",
        "action": "harness.logs:collect"
      },
      {
        "id": "notify-owners",
        "action": "slack.notify:#release-alerts"
      },
      {
        "id": "mark-failed",
        "action": "jira.transition:Failed"
      }
    ]
  },
  "confluence": {
    "templateName": "release-failure-summary",
    "requiredProperties": {
      "releaseVersion": "string",
      "failureReason": "string",
      "owner": "string"
    },
    "properties": {
      "releaseVersion": {
        "type": "string",
        "required": true
      },
      "failureReason": {
        "type": "string",
        "required": true
      },
      "owner": {
        "type": "string",
        "required": true
      }
    }
  },
  "harness": {
    "requiredTransitions": [
      "Ready for Deploy",
      "Failed",
      "Rollback Required"
    ],
    "transitionMap": {
      "Ready for Deploy": "stage.deploy",
      "Failed": "stage.failover",
      "Rollback Required": "stage.rollback"
    }
  }
}
