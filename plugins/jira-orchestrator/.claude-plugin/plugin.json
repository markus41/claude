{
  "$schema": "../../../.claude/core/schemas/plugin.schema.json",
  "name": "jira-orchestrator",
  "displayName": "Jira Orchestrator",
  "version": "7.1.0",
  "description": "Arbiter - Enterprise Jira orchestration with 68 agents, 16 teams, 43 commands, and hook-based automation. Features AutoGen-style team coordination, domain affinity routing, and comprehensive Harness platform integration.",
  "author": {
    "name": "The Lobbi",
    "email": "developers@thelobbi.io"
  },
  "license": "MIT",
  "repository": "https://github.com/Lobbi-Docs/claude",
  "categories": ["orchestration", "project-management", "devops", "agents"],
  "keywords": [
    "jira", "confluence", "orchestration", "automation", "agile", "sprint",
    "enterprise", "compliance", "harness", "helm", "terraform", "kubernetes",
    "infrastructure", "gitops", "hooks", "autogen", "teams", "multi-agent"
  ],

  "provides": {
    "commands": 43,
    "agents": 68,
    "skills": 11,
    "hooks": 7,
    "workflows": "dynamic"
  },

  "discovery": {
    "agents": {
      "enabled": true,
      "directory": "../agents",
      "pattern": "*.md",
      "indexFile": "../registry/agents.index.json"
    },
    "skills": {
      "enabled": true,
      "directory": "../skills",
      "pattern": "*/SKILL.md",
      "indexFile": "../registry/skills.index.json",
      "descriptionBased": true
    },
    "commands": {
      "enabled": true,
      "directory": "../commands",
      "pattern": "*.md",
      "indexFile": "../registry/commands.index.json"
    },
    "workflows": {
      "enabled": true,
      "directory": "../workflows",
      "pattern": "*.json",
      "indexFile": "../registry/workflows.index.json"
    },
    "hooks": {
      "enabled": true,
      "directory": "../hooks",
      "pattern": "scripts/*.sh",
      "indexFile": "../hooks/orchestration-hooks.json"
    }
  },

  "commands": {
    "jira-work": "../commands/work.md",
    "jira-ship": "../commands/ship.md",
    "jira-status": "../commands/status.md",
    "jira-pr": "../commands/pr.md",
    "jira-iterate": "../commands/iterate.md",
    "jira-cancel": "../commands/cancel.md",
    "jira-sprint": "../commands/sprint.md",
    "jira-enterprise": "../commands/enterprise.md",
    "jira-infra": "../commands/infra.md",
    "jira-setup": "../commands/setup.md",
    "jira-sync": "../commands/sync.md",
    "jira-triage": "../commands/triage.md",
    "jira-prepare": "../commands/prepare.md",
    "jira-branch": "../commands/branch.md",
    "jira-commit": "../commands/commit.md",
    "jira-review": "../commands/review.md",
    "jira-council": "../commands/council.md",
    "jira-docs": "../commands/docs.md",
    "jira-confluence": "../commands/confluence.md",
    "jira-deploy": "../commands/deploy.md",
    "jira-notify": "../commands/notify.md",
    "jira-approve": "../commands/approve.md",
    "jira-batch": "../commands/batch.md",
    "jira-export": "../commands/export.md",
    "jira-sla": "../commands/sla.md",
    "jira-compliance": "../commands/compliance.md",
    "jira-metrics": "../commands/metrics.md",
    "jira-quality": "../commands/quality.md",
    "jira-team": "../commands/team.md",
    "jira-portfolio": "../commands/portfolio.md",
    "jira-release": "../commands/release.md",
    "jira-sprint-plan": "../commands/sprint-plan.md",
    "jira-create-repo": "../commands/create-repo.md",
    "jira-qa-review": "../commands/qa-review.md",
    "jira-harness-review": "../commands/harness-review.md",
    "jira-plan-prs": "../commands/plan-prs.md",
    "jira-orchestrate-advanced": "../commands/orchestrate-advanced.md",
    "jira-bulk-commit": "../commands/bulk-commit.md",
    "jira-commit-template": "../commands/commit-template.md",
    "jira-events": "../commands/events.md",
    "jira-install-hooks": "../commands/install-hooks.md",
    "jira-process-worklogs": "../commands/process-worklogs.md",
    "jira-intelligence": "../commands/intelligence.md"
  },

  "agents": {
    "council-coordinator": {
      "path": "../agents/council-coordinator.md",
      "model": "sonnet",
      "description": "Orchestrates multi-agent reviews using blackboard pattern for collaborative decision-making",
      "triggers": ["council", "review council", "agent council", "collaborative review"]
    },
    "triage-agent": {
      "path": "../agents/triage-agent.md",
      "model": "sonnet",
      "description": "Analyzes and classifies Jira issues, assigns priority, labels, and story points",
      "triggers": ["triage", "classify issue", "analyze ticket", "prioritize"]
    },
    "task-enricher": {
      "path": "../agents/task-enricher.md",
      "model": "sonnet",
      "description": "Enriches Jira tasks with technical details, acceptance criteria, and subtasks",
      "triggers": ["enrich", "prepare task", "add details", "decompose"]
    },
    "code-reviewer": {
      "path": "../agents/code-reviewer.md",
      "model": "opus",
      "description": "Performs comprehensive code reviews with security, performance, and best practice analysis",
      "triggers": ["code review", "review code", "pr review", "analyze code"]
    },
    "pr-creator": {
      "path": "../agents/pr-creator.md",
      "model": "haiku",
      "description": "Creates well-formatted pull requests with descriptions, labels, and reviewer assignments",
      "triggers": ["create pr", "open pr", "pull request", "submit pr"]
    },
    "infrastructure-orchestrator": {
      "path": "../agents/infrastructure-orchestrator.md",
      "model": "opus",
      "description": "Expert in Helm, Terraform, Kubernetes, and Harness infrastructure with modular repo creation",
      "triggers": ["infrastructure", "helm", "terraform", "k8s", "kubernetes", "create repo"]
    },
    "sprint-planner": {
      "path": "../agents/sprint-planner.md",
      "model": "sonnet",
      "description": "Plans sprints with capacity analysis, workload balancing, and velocity tracking",
      "triggers": ["sprint planning", "plan sprint", "capacity", "velocity"]
    },
    "harness-api-expert": {
      "path": "../agents/harness-api-expert.md",
      "model": "sonnet",
      "description": "Expert in Harness REST API operations including pipelines, triggers, and executions",
      "triggers": ["harness api", "harness rest", "pipeline api", "harness automation"]
    },
    "code-quality-enforcer": {
      "path": "../agents/code-quality-enforcer.md",
      "model": "opus",
      "description": "Enforces SOLID principles, clean code standards, and architectural patterns",
      "triggers": ["solid", "clean code", "code quality", "refactoring", "architecture"]
    },
    "confluence-manager": {
      "path": "../agents/confluence-manager.md",
      "model": "sonnet",
      "description": "Manages Confluence documentation, creates pages, and syncs with Jira",
      "triggers": ["confluence", "documentation", "wiki", "create page"]
    },
    "notification-router": {
      "path": "../agents/notification-router.md",
      "model": "haiku",
      "description": "Routes notifications to appropriate channels (Slack, email, webhooks)",
      "triggers": ["notify", "notification", "alert", "message"]
    },
    "compliance-reporter": {
      "path": "../agents/compliance-reporter.md",
      "model": "sonnet",
      "description": "Generates compliance reports and audit trails for enterprise governance",
      "triggers": ["compliance", "audit", "governance", "report"]
    }
  },

  "skills": {
    "jira-orchestration": {
      "path": "../skills/jira-orchestration/SKILL.md",
      "description": "Core Jira orchestration patterns and workflows",
      "triggers": ["jira", "orchestration", "workflow", "issue management"]
    },
    "harness-ci": {
      "path": "../skills/harness-ci/SKILL.md",
      "description": "Harness CI for container-native builds, test intelligence, and caching",
      "triggers": ["harness ci", "build pipeline", "ci pipeline", "test intelligence"]
    },
    "harness-cd": {
      "path": "../skills/harness-cd/SKILL.md",
      "description": "Harness CD for Kubernetes, Helm, Terraform deployments with GitOps",
      "triggers": ["harness cd", "deployment", "gitops", "rollback"]
    },
    "harness-platform": {
      "path": "../skills/harness-platform/SKILL.md",
      "description": "Harness platform administration - delegates, RBAC, connectors, secrets",
      "triggers": ["harness platform", "delegate", "rbac", "connector", "secret"]
    },
    "harness-mcp": {
      "path": "../skills/harness-mcp/SKILL.md",
      "description": "Harness Code repository and pull request management",
      "triggers": ["harness code", "harness repo", "harness pr"]
    },
    "clean-architecture": {
      "path": "../skills/clean-architecture/SKILL.md",
      "description": "Clean Architecture, DDD, hexagonal patterns, dependency injection",
      "triggers": ["clean architecture", "ddd", "hexagonal", "dependency injection", "solid"]
    },
    "confluence": {
      "path": "../skills/confluence/SKILL.md",
      "description": "Confluence documentation patterns and automation",
      "triggers": ["confluence", "wiki", "documentation"]
    },
    "triage": {
      "path": "../skills/triage/SKILL.md",
      "description": "Issue triage patterns, classification, and prioritization",
      "triggers": ["triage", "classify", "prioritize"]
    },
    "code-review": {
      "path": "../skills/code-review/SKILL.md",
      "description": "Code review patterns, best practices, and automation",
      "triggers": ["code review", "review patterns", "pr review"]
    },
    "pr-workflow": {
      "path": "../skills/pr-workflow/SKILL.md",
      "description": "Pull request workflow patterns and automation",
      "triggers": ["pr workflow", "pull request", "merge strategy"]
    },
    "task-details": {
      "path": "../skills/task-details/SKILL.md",
      "description": "Task enrichment and detail patterns",
      "triggers": ["task details", "enrichment", "acceptance criteria"]
    }
  },

  "hooks": {
    "preCommit": "../hooks/scripts/detect-jira-key.sh",
    "postCommit": "../hooks/scripts/review-gate.sh",
    "preTask": "../hooks/scripts/triage-check.sh",
    "postTask": "../hooks/scripts/post-task-learning.sh",
    "sessionStart": "../hooks/scripts/session-resume.sh"
  },

  "orchestration": {
    "enabled": true,
    "mandatory": true,
    "protocol": {
      "version": "2.0.0",
      "minSubAgents": 3,
      "maxSubAgents": 13,
      "defaultSubAgents": 5,
      "mandatoryPhases": ["explore", "plan", "code", "test", "document"]
    },
    "features": {
      "tracking": true,
      "logging": true,
      "checkpointing": true,
      "coordination": true,
      "messaging": true,
      "contextPreservation": true
    },
    "database": {
      "type": "sqlite",
      "path": "../sessions/orchestration.db"
    }
  },

  "permissions": {
    "filesystem": [
      { "path": "**/*.md", "access": "readwrite" },
      { "path": "**/*.json", "access": "readwrite" },
      { "path": "**/*.yaml", "access": "readwrite" },
      { "path": "**/*.yml", "access": "readwrite" },
      { "path": "**/*.sh", "access": "read" }
    ],
    "tools": ["Bash", "Read", "Write", "Edit", "Grep", "Glob", "Task", "WebFetch"],
    "mcpServers": ["atlassian", "github", "obsidian"]
  },

  "mcpServers": {
    "required": ["atlassian"],
    "recommended": ["github", "obsidian"],
    "optional": ["slack", "vercel"]
  },

  "activation": {
    "auto": true,
    "priority": 950,
    "conditions": {
      "filePatterns": ["**/.jira/**", "**/jira*.md", "**/*jira*/**"],
      "keywords": [
        "jira", "confluence", "sprint", "epic", "story", "ticket",
        "issue", "backlog", "kanban", "scrum", "agile"
      ],
      "environment": {
        "ATLASSIAN_INSTANCE_URL": "*",
        "JIRA_API_TOKEN": "*"
      }
    }
  },

  "configuration": {
    "schema": {
      "type": "object",
      "properties": {
        "autogenTeams": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoGen-style team coordination"
        },
        "parentChildOrchestration": {
          "type": "boolean",
          "default": true,
          "description": "Enable parent-child orchestration patterns"
        },
        "domainAffinityRouting": {
          "type": "boolean",
          "default": true,
          "description": "Route agents based on domain expertise"
        },
        "phaseTeamMapping": {
          "type": "boolean",
          "default": true,
          "description": "Map teams to orchestration phases"
        },
        "loadStrategy": {
          "type": "string",
          "enum": ["eager", "lazy", "on-demand"],
          "default": "on-demand",
          "description": "Resource loading strategy"
        },
        "hookAutomation": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "gitHooks": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["pre-commit", "post-commit", "pre-push", "post-merge"]
            },
            "orchestrationHooks": {
              "type": "array",
              "items": { "type": "string" },
              "default": ["on-work-start", "on-phase-complete", "on-pr-create", "on-pr-merge"]
            }
          }
        },
        "commandLinking": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "prefix": { "type": "string", "default": "jira-" },
            "target": { "type": "string", "default": ".claude/commands" }
          }
        }
      }
    }
  },

  "flagSystem": {
    "version": "1.0.0",
    "configFile": "../config/flags.json",
    "presetsFile": "../config/presets.json",
    "features": {
      "globalFlags": true,
      "orchestrationFlags": true,
      "jiraFlags": true,
      "reviewFlags": true,
      "gitFlags": true,
      "notificationFlags": true,
      "reportFlags": true,
      "harnessFlags": true,
      "experimentalFlags": true
    },
    "presets": {
      "count": 17,
      "categories": ["speed", "quality", "security", "collaboration", "automation", "release"],
      "recommended": ["speed-run", "thorough", "enterprise", "hotfix"]
    },
    "defaults": {
      "model": "auto",
      "agents": 5,
      "depth": "standard",
      "checkpoint": true,
      "parallel": true
    },
    "validation": {
      "strict": true,
      "unknownFlagsError": true,
      "conflictResolution": "error"
    }
  },

  "documentation": {
    "readme": "../README.md",
    "installation": "../INSTALLATION.md",
    "installationSystem": "../INSTALLATION-SYSTEM.md",
    "installChecklist": "../INSTALL-CHECKLIST.md",
    "flagsGuide": "../docs/FLAGS.md",
    "hooksGuide": "../hooks/README.md",
    "harnessIndex": "../docs/harness/INDEX.md"
  }
}
