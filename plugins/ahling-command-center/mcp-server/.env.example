# Ahling Command Center MCP Server - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Neo4j Configuration (REQUIRED)
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j
NEO4J_MAX_POOL_SIZE=50

# ============================================
# Qdrant Configuration (REQUIRED)
# ============================================
QDRANT_URL=http://localhost:6333
# Optional: Qdrant API key for cloud deployments
# QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_TIMEOUT=30000

# ============================================
# Ollama Configuration (REQUIRED for RAG)
# ============================================
OLLAMA_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ============================================
# HashiCorp Vault Configuration (OPTIONAL)
# ============================================
# VAULT_ADDR=http://localhost:8200
# VAULT_TOKEN=your_vault_token_here
# Or use AppRole authentication:
# VAULT_ROLE_ID=your_role_id_here
# VAULT_SECRET_ID=your_secret_id_here

# ============================================
# Home Assistant Configuration (OPTIONAL)
# ============================================
# Home Assistant URL (include protocol, exclude trailing slash)
HA_URL=http://localhost:8123
# Long-Lived Access Token from Home Assistant
# Create at: Profile > Long-Lived Access Tokens
HA_TOKEN=your_home_assistant_token_here
# WebSocket Configuration (Optional - defaults shown)
# HA_WS_RECONNECT_INTERVAL=5000
# HA_WS_HEARTBEAT_INTERVAL=30000
# HA_WS_MAX_RECONNECT_ATTEMPTS=10

# ============================================
# Docker Configuration (OPTIONAL)
# ============================================
# DOCKER_SOCKET_PATH=/var/run/docker.sock
# Or use TCP connection:
# DOCKER_HOST=tcp://localhost
# DOCKER_PORT=2375

# ============================================
# MCP Server Configuration
# ============================================
MCP_SERVER_NAME=ahling-command-center
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_PORT=3000

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_NEO4J=false
LOG_BATCH_SIZE=100
LOG_FLUSH_INTERVAL=5000
