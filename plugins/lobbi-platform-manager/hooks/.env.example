# Environment variables for lobbi-platform-manager hooks
# Copy this to .env and fill in your values (DO NOT COMMIT .env)

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=lobbi
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Service URLs
API_GATEWAY_URL=http://localhost:3000
MEMBERSHIP_URL=http://localhost:3001
PAYMENT_URL=http://localhost:3002
WEB_URL=http://localhost:3003

# Database Hosts
MONGODB_HOST=localhost:27017
POSTGRES_HOST=localhost:5432
REDIS_HOST=localhost:6379

# Health Check Settings
HEALTH_CHECK_TIMEOUT=5

# Security Settings
SKIP_SECURITY_CHECK=false
ALLOW_DEV_SECRETS=true
