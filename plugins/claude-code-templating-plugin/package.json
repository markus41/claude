{
  "name": "claude-code-templating-plugin",
  "version": "1.0.0",
  "description": "Universal templating and Harness expert plugin for Claude Code - enables fully autonomous project generation, pipeline creation, and deployment automation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:mcp:harness": "vitest run --filter mcp-harness",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude-code",
    "templating",
    "scaffolding",
    "harness",
    "cookiecutter",
    "copier",
    "mcp",
    "pipelines",
    "devops",
    "code-generation"
  ],
  "author": {
    "name": "Markus Ahling",
    "email": "markus@lobbi.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lobbi-Docs/claude",
    "directory": "plugins/claude-code-templating-plugin"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "handlebars": "^4.7.8",
    "nunjucks": "^3.2.4",
    "js-yaml": "^4.1.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "inquirer": "^9.2.0",
    "glob": "^10.3.0",
    "semver": "^7.5.4",
    "fast-glob": "^3.3.2",
    "eventemitter3": "^5.0.1",
    "chalk": "^5.3.0",
    "yaml": "^2.3.4",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/js-yaml": "^4.0.9",
    "@types/semver": "^7.5.6",
    "@types/inquirer": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "rimraf": "^5.0.5"
  },
  "files": [
    "dist",
    "templates",
    "agents",
    "skills",
    "commands"
  ]
}
