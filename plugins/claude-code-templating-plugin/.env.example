# ============================================================================
# CLAUDE CODE TEMPLATING PLUGIN - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and configure the required values
# Version: 2.0.0 (Database Integration)
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION (Shared with jira-orchestrator)
# ----------------------------------------------------------------------------
# Neon serverless PostgreSQL for template registry storage
# These are the same values used in jira-orchestrator/.env

DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# ----------------------------------------------------------------------------
# REDIS CONFIGURATION (Shared with jira-orchestrator)
# ----------------------------------------------------------------------------
# Upstash serverless Redis for template caching

UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-rest-token

# ----------------------------------------------------------------------------
# HARNESS CONFIGURATION (Required for Harness integration)
# ----------------------------------------------------------------------------
HARNESS_API_KEY=your_harness_api_key
HARNESS_ACCOUNT_ID=your_account_id
HARNESS_ORG_ID=your_organization_id
HARNESS_PROJECT_ID=your_project_id

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
# Enable/disable database and cache features

FEATURE_TEMPLATE_DB_ENABLED=true
FEATURE_TEMPLATE_CACHE_ENABLED=true

# ----------------------------------------------------------------------------
# OPTIONAL - GitHub integration for template discovery
# ----------------------------------------------------------------------------
GITHUB_TOKEN=your_github_token
