{
  "$schema": "https://raw.githubusercontent.com/microsoft/PowerApps-Tooling/main/schemas/dataverse-table.schema.json",
  "metadata": {
    "entity": "Consulting",
    "publisher": "tvs",
    "prefix": "tvs_",
    "environment": "org-consulting-{env}.crm.dynamics.com",
    "description": "Dataverse table definitions for Lobbi Consulting and Medicare Consulting entities",
