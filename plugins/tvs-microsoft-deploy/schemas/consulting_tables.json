          "formula": "tvs_firstname + ' ' + tvs_lastname"
        },
        "tvs_email": {
          "type": "String",
          "maxLength": 320,
          "required": true,
          "displayName": "Email",
          "format": "email"
        },
        "tvs_phone": {
          "type": "String",
          "maxLength": 50,
          "required": false,
          "displayName": "Phone",
          "format": "phone"
        },
        "tvs_accountid": {
          "type": "Lookup",
          "required": true,
          "displayName": "Account",
          "relatedTable": "tvs_consultingaccount"
