      "ownership": "UserOwned",
      "primaryColumn": "tvs_name",
      "columns": {
        "tvs_name": {
          "type": "String",
          "maxLength": 200,
          "required": true,
          "displayName": "Account Name"
        },
        "tvs_entity": {
          "type": "Choice",
          "required": true,
          "displayName": "Owning Entity",
          "description": "Which consulting entity owns this account",
          "options": [
            {
              "label": "Lobbi Consulting",
              "value": 100000000
            },
            {
              "label": "Medicare Consulting",
              "value": 100000001
            }
          ]
        },
        "tvs_industry": {
          "type": "Choice",
          "required": false,
          "displayName": "Industry",
          "options": [
            {
              "label": "Insurance",
              "value": 100000000
            },
            {
              "label": "Healthcare",
              "value": 100000001
            },
            {
              "label": "Financial Services",
              "value": 100000002
            },
            {
              "label": "Government",
              "value": 100000003
            },
            {
              "label": "Education",
              "value": 100000004
            },
            {
              "label": "Technology",
              "value": 100000005
            },
            {
              "label": "Other",
              "value": 100000006
            }
          ]
        },
        "tvs_status": {
          "type": "Choice",
          "required": true,
          "displayName": "Status",
          "options": [
            {
              "label": "Prospect",
              "value": 100000000
            },
            {
              "label": "Qualified Lead",
              "value": 100000001
            },
            {
              "label": "Active Client",
              "value": 100000002
            },
            {
              "label": "Inactive",
              "value": 100000003
            },
            {
              "label": "Archived",
              "value": 100000004
            }
          ]
        },
        "tvs_revenue": {
          "type": "Currency",
          "required": false,
          "displayName": "Annual Revenue",
          "precision": 2
        },
        "tvs_website": {
          "type": "String",
          "maxLength": 500,
          "required": false,
          "displayName": "Website",
          "format": "url"
        },
        "tvs_address": {
          "type": "Memo",
          "maxLength": 1000,
          "required": false,
          "displayName": "Address"
        },
        "tvs_accountmanager": {
          "type": "Lookup",
          "required": false,
          "displayName": "Account Manager",
          "relatedTable": "systemuser"
        }
      },
      "relationships": [
        {
          "type": "OneToMany",
          "relatedTable": "tvs_consultingcontact",
          "lookupColumn": "tvs_accountid",
          "displayName": "Account Contacts"
        },
        {
          "type": "OneToMany",
          "relatedTable": "tvs_engagement",
          "lookupColumn": "tvs_accountid",
          "displayName": "Account Engagements"
        }
      ]
    },
    "Contacts": {
      "logicalName": "tvs_consultingcontact",
      "displayName": "Consulting Contact",
      "pluralName": "Consulting Contacts",
