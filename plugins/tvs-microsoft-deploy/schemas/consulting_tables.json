        "tvs_projectmanager": {
          "type": "Lookup",
          "required": false,
          "displayName": "Project Manager",
          "relatedTable": "systemuser"
        },
        "tvs_description": {
          "type": "Memo",
          "maxLength": 10000,
          "required": false,
          "displayName": "Description"
        }
