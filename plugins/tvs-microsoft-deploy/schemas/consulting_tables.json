        "tvs_lastname": {
          "type": "String",
          "maxLength": 100,
          "required": true,
          "displayName": "Last Name"
        },
        "tvs_fullname": {
          "type": "String",
          "maxLength": 200,
          "required": false,
          "displayName": "Full Name",
