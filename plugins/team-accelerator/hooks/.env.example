# Team Accelerator Hooks Configuration
# Copy this file to .env and customize for your project

# ============================================
# Hook Behavior
# ============================================

# Validation mode: false = advisory (warn only), true = strict (block on issues)
HOOK_STRICT_MODE=false

# ============================================
# Project Configuration
# ============================================

# Project identifier (used in notifications and reports)
PROJECT_NAME=my-awesome-app

# Project root directory (absolute path)
PROJECT_ROOT=/path/to/project

# Git branch (default branch for PRs)
GIT_BRANCH=main

# ============================================
# Obsidian Vault Integration
# ============================================

# Path to Obsidian vault (for documentation sync)
OBSIDIAN_VAULT_PATH=$HOME/obsidian

# ============================================
# Deployment Notifications
# ============================================

# Webhook URL for deployment notifications (Slack, Discord, etc.)
DEPLOY_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Notification channels (comma-separated: log,webhook,slack)
NOTIFICATION_CHANNELS=log,webhook

# ============================================
# Plugin Configuration
# ============================================

# Team Accelerator plugin root directory
CLAUDE_PLUGIN_ROOT=$PWD/team-accelerator

# ============================================
# LLM API Keys (for sub-agents)
# ============================================

# Anthropic Claude API key
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API key (optional)
OPENAI_API_KEY=sk-...

# Google Gemini API key (optional)
GOOGLE_API_KEY=...

# ============================================
# Integration Keys (optional)
# ============================================

# GitHub API token (for GitHub MCP)
GITHUB_TOKEN=ghp_...

# Jira API token (for Jira integration)
JIRA_API_TOKEN=...

# Supabase configuration (for Supabase MCP)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=...

# Vercel configuration (for Vercel MCP)
VERCEL_TOKEN=...
VERCEL_PROJECT_ID=...

# Upstash Redis (for Upstash MCP)
UPSTASH_REDIS_URL=...
UPSTASH_REDIS_TOKEN=...

# ============================================
# Hook-Specific Configuration
# ============================================

# Pre-Commit Validator
VALIDATOR_EXCLUDE_PATTERNS=**/node_modules/**,**/dist/**,**/build/**

# Test Analyzer
TEST_COVERAGE_THRESHOLD=80
TEST_REPORT_FORMAT=markdown

# Documentation Sync
DOCS_AUTO_COMMIT=false
DOCS_CREATE_ADRS=false

# ============================================
# Logging Configuration
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log directory
LOG_DIR=.claude/logs

# ============================================
# Performance Configuration
# ============================================

# Hook timeout (milliseconds)
HOOK_TIMEOUT=30000

# Max concurrent hooks
MAX_CONCURRENT_HOOKS=3

# ============================================
# CI/CD Configuration
# ============================================

# CI mode (stricter validation in CI)
CI_MODE=false

# Fail CI on validation errors
FAIL_ON_VALIDATION_ERROR=true

# Fail CI on test failures
FAIL_ON_TEST_FAILURE=true

# Fail CI on coverage below threshold
FAIL_ON_LOW_COVERAGE=true
