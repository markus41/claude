        "capabilities": {
          "tools": [
            "resolve-library-id", "get-library-docs"
          ],
          "resources": []
        },
        "autoActivate": true,
        "triggers": ["library", "docs", "documentation", "api-reference", "how-to", "example"],
        "priority": "high"
      },
      "ide": {
        "description": "VS Code IDE integration for diagnostics and code execution",
        "provider": "builtin",
        "keywords": ["vscode", "ide", "diagnostics", "jupyter", "notebook"],
        "capabilities": {
          "tools": [
            "getDiagnostics", "executeCode"
          ],
          "resources": []
        },
        "autoActivate": true,
        "triggers": ["vscode", "diagnostics", "linter", "jupyter", "notebook", "kernel"],
        "priority": "medium"
      }
    },

    "project": {
      "harness": {
        "description": "Harness CD platform integration for pipelines, connectors, Git repositories, pull requests, code review comments, and dashboards via MCP",
        "provider": "custom",
        "configPath": ".claude/mcp/harness-mcp.json",
        "keywords": ["harness", "cd", "pipeline", "deployment", "connector", "gitops", "kubernetes", "git", "repository", "pull-request", "pr", "comment", "review"],
        "capabilities": {
          "tools": [
            "harness_get_connector", "harness_list_connectors", "harness_get_connector_catalogue",
            "harness_list_pipelines", "harness_get_pipeline", "harness_trigger_pipeline",
            "harness_get_execution", "harness_list_executions", "harness_get_execution_url",
            "harness_list_dashboards", "harness_get_dashboard",
            "harness_get_repository", "harness_list_repositories",
            "harness_get_pull_request", "harness_list_pull_requests", "harness_create_pull_request",
            "harness_get_pull_request_checks", "harness_get_pull_request_activities"
          ],
          "resources": [
            "harness://connector/{connectorId}",
            "harness://pipeline/{pipelineId}",
            "harness://execution/{executionId}",
            "harness://repository/{repoId}",
            "harness://pullrequest/{repoId}/{prNumber}"
          ]
        },
        "autoActivate": false,
        "triggers": ["harness", "cd", "pipeline", "deployment", "connector", "gitops", "harness git", "harness pr", "harness repository", "harness comment"],
        "priority": "medium",
        "requiredEnvVars": ["HARNESS_API_KEY", "HARNESS_DEFAULT_ORG_ID", "HARNESS_DEFAULT_PROJECT_ID"]
      },
      "atlassian": {
        "description": "Atlassian Jira and Confluence integration for project management",
        "provider": "custom",
        "configPath": ".claude/mcp/atlassian-mcp.json",
        "keywords": ["jira", "confluence", "atlassian", "issue", "sprint", "wiki", "documentation"],
        "capabilities": {
          "tools": [
            "jira_create_issue", "jira_get_issue", "jira_update_issue", "jira_transition_issue",
            "jira_search", "jira_add_comment", "jira_get_sprint", "jira_move_to_sprint",
            "confluence_create_page", "confluence_get_page", "confluence_update_page",
            "confluence_search", "confluence_add_labels", "confluence_get_space", "confluence_list_pages"
          ],
          "resources": [
            "jira://project/{projectKey}",
            "jira://issue/{issueKey}",
            "jira://sprint/{sprintId}",
            "confluence://space/{spaceKey}",
            "confluence://page/{pageId}"
          ]
        },
        "autoActivate": false,
        "triggers": ["jira", "confluence", "sprint", "backlog", "wiki", "issue", "story", "epic"],
        "priority": "medium",
        "requiredEnvVars": ["JIRA_URL", "JIRA_API_TOKEN", "CONFLUENCE_URL", "CONFLUENCE_API_TOKEN"]
      },
      "n8n": {
        "description": "n8n workflow automation and integration platform for workflow execution, webhooks, and data transformation",
        "provider": "http",
        "url": "https://the-lobbi.app.n8n.cloud/mcp-server/http",
        "keywords": ["n8n", "workflow", "automation", "webhook", "integration", "pipeline", "etl"],
        "capabilities": {
          "tools": [],
          "resources": []
        },
        "autoActivate": false,
        "triggers": ["workflow", "n8n", "automation", "webhook", "pipeline", "integration"],
        "priority": "medium",
        "authentication": "bearer-token"
      },
      "obsidian": {
        "description": "Obsidian vault for centralized documentation, templates, and ADRs",
        "provider": "custom",
        "configPath": ".claude/mcp/obsidian-mcp.json",
        "keywords": ["obsidian", "vault", "documentation", "template", "adr", "wiki", "notes"],
        "capabilities": {
          "tools": [
            "list_files_in_vault", "list_files_in_dir", "get_file_contents",
            "simple_search", "complex_search", "append_content", "patch_content",
            "get_periodic_note", "get_recent_periodic_notes", "batch_get_file_contents",
            "delete_file"
          ],
          "resources": [
            "obsidian://vault/Repositories/{org}/{repo}.md",
            "obsidian://vault/Projects/{project}/",
            "obsidian://vault/Research/",
            "obsidian://vault/Templates/",
            "obsidian://vault/System/"
          ]
        },
        "autoActivate": false,
        "triggers": ["documentation", "vault", "obsidian", "adr", "template", "wiki", "research"],
        "priority": "medium",
        "requiredConfig": {
          "vaultPath": "C:\\Users\\MarkusAhling\\obsidian",
          "pluginEnabled": "obsidian-local-rest-api"
        }
      }
    },

    "extension": {
      "custom-mcp-server": {
        "description": "Template for creating custom MCP servers",
        "provider": "custom",
        "configPath": ".claude/tools/mcp-server/config.json",
        "keywords": ["custom", "mcp", "tool", "extension"],
        "capabilities": {
          "tools": ["execute_agent", "get_agent_status", "list_agents"],
          "resources": []
        },
        "autoActivate": false,
        "triggers": [],
        "priority": "low"
      }
    }
  },

  "toolAliases": {
    "db": "mcp__supabase__execute_sql",
    "migrate": "mcp__supabase__apply_migration",
    "tables": "mcp__supabase__list_tables",
    "deploy": "mcp__vercel__deploy_to_vercel",
    "screenshot": "mcp__playwright__browser_take_screenshot",
    "snapshot": "mcp__playwright__browser_snapshot",
    "docs": "mcp__context7__get-library-docs",
    "vault": "mcp__obsidian__list_files_in_vault",
    "vault-read": "mcp__obsidian__get_file_contents",
    "vault-search": "mcp__obsidian__simple_search",
    "vault-add": "mcp__obsidian__append_content"
  },

  "activationRules": {
    "contextBased": {
      "enabled": true,
      "maxActiveMcps": 5,
      "scoringWeights": {
        "keywordMatch": 5,
        "triggerMatch": 4,
        "recentUsage": 2,
        "dependency": 3
      }
    },
    "filePatterns": {
      ".sql": ["supabase"],
      "supabase/**": ["supabase"],
      "vercel.json": ["vercel"],
      ".github/**": ["github"],
      "playwright.config.*": ["playwright"],
      "*.spec.ts": ["playwright"],
      "*.test.ts": ["playwright"]
    },
    "projectType": {
      "nextjs": ["vercel", "supabase", "context7"],
      "supabase-project": ["supabase", "upstash"],
      "full-stack": ["supabase", "vercel", "upstash", "github"]
    }
  },

