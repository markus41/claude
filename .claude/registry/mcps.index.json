{
  "$schema": "./schema/mcps.schema.json",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server registry - dynamic discovery and activation",

  "mcpServers": {
    "core": {
      "supabase": {
        "description": "Supabase database operations, migrations, and TypeScript type generation",
        "provider": "builtin",
        "keywords": ["database", "supabase", "sql", "migration", "schema", "types", "edge-function"],
        "capabilities": {
          "tools": [
            "list_tables", "list_extensions", "list_migrations", "apply_migration",
            "execute_sql", "get_logs", "get_advisors", "get_project_url", "get_anon_key",
            "generate_typescript_types", "list_edge_functions", "get_edge_function",
            "deploy_edge_function", "create_branch", "list_branches", "delete_branch",
            "merge_branch", "reset_branch", "rebase_branch", "search_docs"
          ],
          "resources": []
        },
        "autoActivate": true,
        "triggers": ["supabase", "database", "sql", "migration", "edge-function", "rls", "postgres"],
        "priority": "high"
      },
      "vercel": {
        "description": "Vercel deployment, project management, and domain configuration",
        "provider": "builtin",
        "keywords": ["vercel", "deploy", "hosting", "domain", "nextjs", "preview"],
        "capabilities": {
          "tools": [
            "search_vercel_documentation", "deploy_to_vercel", "list_projects", "get_project",
            "list_deployments", "get_deployment", "get_deployment_build_logs",
            "get_access_to_vercel_url", "web_fetch_vercel_url", "list_teams",
            "check_domain_availability_and_price"
          ],
          "resources": []
        },
        "autoActivate": true,
        "triggers": ["vercel", "deploy", "preview", "domain", "hosting"],
        "priority": "high"
      },
      "upstash": {
        "description": "Upstash Redis database and QStash message queue management",
        "provider": "builtin",
        "keywords": ["redis", "cache", "queue", "qstash", "upstash", "workflow"],
        "capabilities": {
          "tools": [
            "redis_database_create_new", "redis_database_delete", "redis_database_list_databases",
            "redis_database_get_details", "redis_database_update_regions", "redis_database_reset_password",
            "redis_database_get_statistics", "redis_database_manage_backup", "redis_database_list_backups",
            "redis_database_set_daily_backup", "redis_database_run_redis_commands",
            "qstash_get_user_token", "qstash_publish_message", "qstash_logs_list", "qstash_logs_get",
            "qstash_dlq_list", "qstash_dlq_get", "qstash_schedules_list", "qstash_schedules_manage",
            "workflow_logs_list", "workflow_logs_get", "workflow_dlq_list", "workflow_dlq_get", "workflow_dlq_manage"
          ],
          "resources": []
        },
        "autoActivate": true,
        "triggers": ["redis", "cache", "queue", "qstash", "upstash", "rate-limit"],
        "priority": "medium"
      },
      "github": {
        "description": "GitHub repository, issue, and pull request management",
        "provider": "builtin",
        "keywords": ["github", "git", "pr", "issue", "repository", "branch", "commit"],
        "capabilities": {
          "tools": [
            "create_or_update_file", "search_repositories", "create_repository", "get_file_contents",
            "push_files", "create_issue", "create_pull_request", "fork_repository", "create_branch",
            "list_commits", "list_issues", "update_issue", "add_issue_comment", "search_code",
            "search_issues", "search_users", "get_issue", "get_pull_request", "list_pull_requests",
            "create_pull_request_review", "merge_pull_request", "get_pull_request_files",
            "get_pull_request_status", "update_pull_request_branch", "get_pull_request_comments",
            "get_pull_request_reviews"
          ],
          "resources": []
        },
        "autoActivate": true,
        "triggers": ["github", "git", "pr", "pull-request", "issue", "branch", "commit", "repo"],
        "priority": "high"
      },
      "playwright": {
        "description": "Browser automation for testing and web interaction",
        "provider": "builtin",
        "keywords": ["browser", "playwright", "test", "automation", "e2e", "screenshot"],
        "capabilities": {
          "tools": [
            "browser_close", "browser_resize", "browser_console_messages", "browser_handle_dialog",
            "browser_evaluate", "browser_file_upload", "browser_fill_form", "browser_install",
            "browser_press_key", "browser_type", "browser_navigate", "browser_navigate_back",
