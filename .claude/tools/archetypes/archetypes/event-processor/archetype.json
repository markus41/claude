{
  "name": "event-processor",
  "version": "1.0.0",
  "description": "Event-driven processing system with pub/sub patterns, event sourcing, and CQRS support",
  "category": "data",
  "author": "Lobbi-Docs",
  "license": "MIT",
  "keywords": ["events", "pub-sub", "cqrs", "event-sourcing", "stream", "processing"],
  "variables": [
    {
      "name": "pluginName",
      "type": "string",
      "prompt": "Plugin name (kebab-case):",
      "required": true,
      "validation": "^[a-z][a-z0-9-]*$",
      "description": "Name of the event processor plugin"
    },
    {
      "name": "description",
      "type": "string",
      "prompt": "Plugin description:",
      "required": true,
      "description": "What events this processor handles"
    },
    {
      "name": "pattern",
      "type": "choice",
      "prompt": "Event processing pattern:",
      "required": true,
      "choices": ["pub-sub", "event-sourcing", "cqrs", "saga", "choreography"],
      "default": "pub-sub",
      "description": "Primary event processing pattern"
    },
    {
      "name": "transport",
      "type": "choice",
      "prompt": "Event transport:",
      "required": true,
      "choices": ["in-memory", "redis", "kafka", "rabbitmq", "sqs", "file"],
      "default": "in-memory",
      "description": "How events are transported"
    },
    {
      "name": "features",
      "type": "multi-choice",
      "prompt": "Include features:",
      "choices": ["replay", "snapshots", "projections", "dead-letter", "ordering", "deduplication", "partitioning"],
      "default": ["replay", "dead-letter", "ordering"],
      "description": "Advanced event processing features"
    },
    {
      "name": "persistence",
      "type": "choice",
      "prompt": "Event store persistence:",
      "choices": ["memory", "file", "postgres", "mongodb", "dynamodb"],
      "default": "file",
      "description": "Where events are stored"
    },
    {
      "name": "author",
      "type": "string",
      "prompt": "Author name:",
      "default": "Markus Ahling"
    }
  ],
  "dependencies": [],
  "files": ["templates/**/*"]
}
