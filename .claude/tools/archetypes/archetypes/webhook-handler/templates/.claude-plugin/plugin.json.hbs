{
  "$schema": "https://claude.ai/schemas/plugin.json",
  "name": "{{pluginName}}",
  "version": "1.0.0",
  "description": "{{description}}",
  "author": "{{author}}",
  "license": "MIT",
  "repository": "",
  "keywords": [
    "webhook",
    "{{lowercase serviceName}}",
    "events",
    "integration"
  ],
  "categories": ["integration", "automation"],
  "engines": {
    "claude-code": ">=1.0.0"
  },
  "webhook": {
    "service": "{{serviceName}}",
    "signature": {
      "type": "{{signatureType}}",
      "header": "{{#if (eq signatureType "hmac-sha256")}}X-Hub-Signature-256{{/if}}{{#if (eq signatureType "hmac-sha1")}}X-Hub-Signature{{/if}}{{#if (eq signatureType "jwt")}}Authorization{{/if}}{{#if (eq signatureType "api-key")}}X-API-Key{{/if}}"
    },
    "events": [
      {{#each events}}"{{this}}"{{#unless @last}},{{/unless}}
      {{/each}}
    ]
  },
  "features": {
    {{#each features}}
    "{{this}}": true{{#unless @last}},{{/unless}}
    {{/each}}
  },
  "storage": {
    "type": "{{storage}}",
    "location": ".claude/webhook-events"
  },
  "commands": [
    {
      "name": "webhook:status",
      "file": "commands/status.md",
      "description": "Check webhook handler status"
    },
    {
      "name": "webhook:replay",
      "file": "commands/replay.md",
      "description": "Replay failed webhook events"
    }
  ],
  "agents": [
    {
      "name": "{{pluginName}}-processor",
      "file": "agents/processor.md",
      "model": "haiku",
      "description": "Processes {{serviceName}} webhook events"
    }
  ]
}
