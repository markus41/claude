{
  "name": "webhook-handler",
  "version": "1.0.0",
  "description": "Webhook receiver and processor with signature verification, event routing, and retry handling",
  "category": "integration",
  "author": "Lobbi-Docs",
  "license": "MIT",
  "keywords": ["webhook", "events", "http", "integration", "callback", "notification"],
  "variables": [
    {
      "name": "pluginName",
      "type": "string",
      "prompt": "Plugin name (kebab-case):",
      "required": true,
      "validation": "^[a-z][a-z0-9-]*$",
      "description": "Name of the webhook handler plugin"
    },
    {
      "name": "serviceName",
      "type": "string",
      "prompt": "Service name (source of webhooks):",
      "required": true,
      "description": "Name of the service sending webhooks (e.g., GitHub, Stripe, Harness)"
    },
    {
      "name": "description",
      "type": "string",
      "prompt": "Plugin description:",
      "required": true,
      "description": "What this webhook handler processes"
    },
    {
      "name": "signatureType",
      "type": "choice",
      "prompt": "Signature verification method:",
      "required": true,
      "choices": ["hmac-sha256", "hmac-sha1", "rsa-sha256", "jwt", "api-key", "none"],
      "default": "hmac-sha256",
      "description": "How webhook signatures are verified"
    },
    {
      "name": "events",
      "type": "multi-choice",
      "prompt": "Event categories to handle:",
      "choices": ["create", "update", "delete", "status-change", "notification", "sync", "error", "custom"],
      "default": ["create", "update", "status-change"],
      "description": "Types of events this handler processes"
    },
    {
      "name": "features",
      "type": "multi-choice",
      "prompt": "Include features:",
      "choices": ["retry-queue", "dead-letter", "idempotency", "rate-limiting", "batching", "logging", "metrics"],
      "default": ["retry-queue", "idempotency", "logging"],
      "description": "Additional reliability features"
    },
    {
      "name": "storage",
      "type": "choice",
      "prompt": "Event storage:",
      "choices": ["memory", "file", "redis", "database", "none"],
      "default": "file",
      "description": "Where to store processed events"
    },
    {
      "name": "author",
      "type": "string",
      "prompt": "Author name:",
      "default": "Markus Ahling"
    }
  ],
  "dependencies": [],
  "files": ["templates/**/*"]
}
