{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Multi-channel notification service with templating, scheduling, and delivery tracking",
  "category": "communication",
  "author": "Lobbi-Docs",
  "license": "MIT",
  "keywords": ["notifications", "email", "slack", "sms", "push", "alerts"],
  "variables": [
    {
      "name": "pluginName",
      "type": "string",
      "prompt": "Plugin name (kebab-case):",
      "required": true,
      "validation": "^[a-z][a-z0-9-]*$",
      "description": "Name of the notification service plugin"
    },
    {
      "name": "description",
      "type": "string",
      "prompt": "Plugin description:",
      "required": true,
      "description": "What this notification service handles"
    },
    {
      "name": "channels",
      "type": "multi-choice",
      "prompt": "Notification channels:",
      "required": true,
      "choices": ["slack", "teams", "email", "sms", "push", "webhook", "discord", "pagerduty"],
      "default": ["slack", "email"],
      "description": "Delivery channels to support"
    },
    {
      "name": "features",
      "type": "multi-choice",
      "prompt": "Include features:",
      "choices": ["templates", "scheduling", "batching", "tracking", "preferences", "i18n", "fallback"],
      "default": ["templates", "tracking"],
      "description": "Notification service features"
    },
    {
      "name": "templateEngine",
      "type": "choice",
      "prompt": "Template engine:",
      "choices": ["handlebars", "mustache", "ejs", "none"],
      "default": "handlebars",
      "description": "How notification content is templated"
    },
    {
      "name": "storage",
      "type": "choice",
      "prompt": "Notification storage:",
      "choices": ["memory", "file", "database"],
      "default": "file",
      "description": "Where to store notification history"
    },
    {
      "name": "author",
      "type": "string",
      "prompt": "Author name:",
      "default": "Markus Ahling"
    }
  ],
  "dependencies": [],
  "files": ["templates/**/*"]
}
