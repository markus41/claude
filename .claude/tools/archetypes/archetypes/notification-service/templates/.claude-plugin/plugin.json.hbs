{
  "$schema": "https://claude.ai/schemas/plugin.json",
  "name": "{{pluginName}}",
  "version": "1.0.0",
  "description": "{{description}}",
  "author": "{{author}}",
  "license": "MIT",
  "keywords": [
    "notifications",
    {{#each channels}}"{{this}}"{{#unless @last}},{{/unless}}
    {{/each}}
  ],
  "categories": ["communication", "automation"],
  "engines": {
    "claude-code": ">=1.0.0"
  },
  "notifications": {
    "channels": [{{#each channels}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}],
    "templateEngine": "{{templateEngine}}",
    "storage": "{{storage}}"
  },
  "features": {
    {{#each features}}
    "{{this}}": true{{#unless @last}},{{/unless}}
    {{/each}}
  },
  "commands": [
    {
      "name": "notify:send",
      "file": "commands/send.md",
      "description": "Send a notification"
    },
    {
      "name": "notify:status",
      "file": "commands/status.md",
      "description": "Check notification status"
    },
    {
      "name": "notify:history",
      "file": "commands/history.md",
      "description": "View notification history"
    }
  ],
  "agents": [
    {
      "name": "{{pluginName}}-dispatcher",
      "file": "agents/dispatcher.md",
      "model": "haiku",
      "description": "Routes notifications to appropriate channels"
    }
  ]
}
