{
  "$schema": "../../core/schemas/plugin.schema.json",
  "name": "autonomous-sprint-ai",
  "displayName": "Autonomous Sprint AI",
  "callsign": "Strategos",
  "faction": "Forerunner",
  "version": "1.0.0",
  "description": "Strategos - The Supreme Commander. Revolutionary self-governing sprint management AI that autonomously plans sprints, rebalances workloads, predicts blockers, negotiates scope, and makes real-time decisions. Operates with configurable autonomy levels from advisor to full autopilot. Learns from historical data to optimize team performance.",
  "author": {
    "name": "The Lobbi",
    "email": "developers@thelobbi.io"
  },
  "license": "MIT",
  "repository": "https://github.com/Lobbi-Docs/claude",
  "keywords": [
    "autonomous", "self-governing", "sprint", "agile", "planning",
    "workload-balancing", "blocker-prediction", "scope-negotiation",
    "capacity-optimization", "velocity-prediction", "risk-assessment",
    "decision-making", "adaptive", "learning", "autopilot"
  ],

  "autonomyLevels": {
    "advisor": {
      "name": "Advisor Mode",
      "level": 1,
      "description": "Suggests actions, human approves all",
      "autoActions": [],
      "requiresApproval": ["all"]
    },
    "assistant": {
      "name": "Assistant Mode",
      "level": 2,
      "description": "Auto-executes low-risk actions, approves medium/high",
      "autoActions": ["assign-to-available", "update-estimates", "add-labels"],
      "requiresApproval": ["scope-change", "reassignment", "priority-change"]
    },
    "partner": {
      "name": "Partner Mode",
      "level": 3,
      "description": "Auto-executes most actions, approves high-impact only",
      "autoActions": ["*except-scope-major"],
      "requiresApproval": ["scope-reduction-major", "sprint-commitment-change"]
    },
    "autopilot": {
      "name": "Autopilot Mode",
      "level": 4,
      "description": "Full autonomous operation with guardrails",
      "autoActions": ["*"],
      "requiresApproval": [],
      "guardrails": ["max-scope-change-20%", "no-deadline-reduction", "respect-commitments"]
    }
  },

  "decisionEngine": {
    "workloadBalancing": {
      "name": "Workload Balancer",
      "description": "Real-time workload distribution across team",
      "factors": [
        "current-capacity",
        "skill-match",
        "context-switching-cost",
        "timezone",
        "preference",
        "vacation-schedule"
      ],
      "algorithm": "multi-objective-optimization",
      "rebalanceFrequency": "continuous"
    },
    "blockerPrediction": {
      "name": "Blocker Predictor",
      "description": "Predicts blockers before they materialize",
      "signals": [
        "dependency-chains",
        "external-team-capacity",
        "historical-patterns",
        "pr-review-backlog",
        "environment-health"
      ],
      "predictionHorizon": "3-7 days",
      "accuracyTarget": 0.8
    },
    "scopeNegotiator": {
      "name": "Scope Negotiator",
      "description": "Autonomously negotiates scope based on reality",
      "strategies": [
        "must-have-first",
        "value-weighted",
        "dependency-ordered",
        "risk-adjusted"
      ],
      "outputs": ["scope-proposal", "trade-off-analysis", "stakeholder-brief"]
    },
    "riskAssessor": {
      "name": "Risk Assessor",
      "description": "Continuous risk assessment and mitigation",
      "riskCategories": [
        "delivery-risk",
        "quality-risk",
        "dependency-risk",
        "resource-risk"
      ],
      "mitigationStrategies": "auto-generated"
    },
    "sprintHealthOptimizer": {
      "name": "Sprint Health Optimizer",
      "description": "Optimizes sprint health metrics in real-time",
      "metrics": ["velocity-stability", "scope-creep", "burndown-shape", "team-morale"],
      "interventions": ["rebalance", "scope-adjust", "escalate", "celebrate"]
    }
  },

  "commands": {
    "sprint:autopilot": "commands/autopilot.md",
    "sprint:plan": "commands/plan.md",
    "sprint:rebalance": "commands/rebalance.md",
    "sprint:predict": "commands/predict.md",
    "sprint:negotiate": "commands/negotiate.md",
    "sprint:intervene": "commands/intervene.md",
    "sprint:health": "commands/health.md",
    "sprint:simulate": "commands/simulate.md",
    "sprint:explain": "commands/explain.md",
    "sprint:override": "commands/override.md",
    "sprint:learn": "commands/learn.md",
    "sprint:report": "commands/report.md",
    "sprint:configure": "commands/configure.md",
    "sprint:status": "commands/status.md"
  },

  "agents": {
    "sprint-commander-agent": {
      "path": "agents/sprint-commander-agent.md",
      "model": "opus",
      "description": "Master orchestrator making strategic sprint decisions",
      "triggers": ["sprint autopilot", "autonomous sprint", "run sprint"]
    },
    "capacity-optimizer-agent": {
      "path": "agents/capacity-optimizer-agent.md",
      "model": "sonnet",
      "description": "Optimizes work distribution across team capacity",
      "triggers": ["balance workload", "capacity", "redistribute"]
    },
    "blocker-predictor-agent": {
      "path": "agents/blocker-predictor-agent.md",
      "model": "sonnet",
      "description": "Predicts blockers using ML and pattern analysis",
      "triggers": ["predict blocker", "what will block", "risk ahead"]
    },
    "scope-negotiator-agent": {
      "path": "agents/scope-negotiator-agent.md",
      "model": "opus",
      "description": "Negotiates scope changes with stakeholders",
      "triggers": ["negotiate scope", "scope change", "adjust commitment"]
    },
    "velocity-predictor-agent": {
      "path": "agents/velocity-predictor-agent.md",
      "model": "sonnet",
      "description": "Predicts sprint velocity using Monte Carlo",
      "triggers": ["predict velocity", "how much can we do", "capacity forecast"]
    },
    "dependency-resolver-agent": {
      "path": "agents/dependency-resolver-agent.md",
      "model": "sonnet",
      "description": "Resolves dependency conflicts and sequences work",
      "triggers": ["dependency", "blocked by", "sequence work"]
    },
    "intervention-agent": {
      "path": "agents/intervention-agent.md",
      "model": "sonnet",
      "description": "Executes interventions when sprint goes off-track",
      "triggers": ["intervene", "sprint off track", "course correct"]
    },
    "learning-agent": {
      "path": "agents/learning-agent.md",
      "model": "sonnet",
      "description": "Learns from sprint outcomes to improve predictions",
      "triggers": ["learn from sprint", "retro analysis", "improve model"]
    },
    "simulation-agent": {
      "path": "agents/simulation-agent.md",
      "model": "sonnet",
      "description": "Simulates sprint scenarios for planning",
      "triggers": ["simulate", "what if", "scenario planning"]
    },
    "stakeholder-comm-agent": {
      "path": "agents/stakeholder-comm-agent.md",
      "model": "haiku",
      "description": "Communicates decisions to stakeholders",
      "triggers": ["notify stakeholders", "communicate decision"]
    },
    "escalation-agent": {
      "path": "agents/escalation-agent.md",
      "model": "haiku",
      "description": "Handles escalations when autonomous action insufficient",
      "triggers": ["escalate", "need human", "approval required"]
    },
    "guardrail-agent": {
      "path": "agents/guardrail-agent.md",
      "model": "haiku",
      "description": "Enforces guardrails and prevents harmful actions",
      "triggers": ["check guardrail", "validate action", "safety check"]
    }
  },

  "skills": {
    "autonomous-planning": {
      "path": "skills/autonomous-planning.md",
      "description": "Self-governing sprint planning strategies",
      "triggers": ["autonomous", "autopilot", "self-manage"]
    },
    "workload-optimization": {
      "path": "skills/workload-optimization.md",
      "description": "Multi-objective workload optimization",
      "triggers": ["workload", "balance", "optimize capacity"]
    },
    "predictive-analytics": {
      "path": "skills/predictive-analytics.md",
      "description": "ML-based prediction for sprints",
      "triggers": ["predict", "forecast", "monte carlo"]
    },
    "negotiation-tactics": {
      "path": "skills/negotiation-tactics.md",
      "description": "Scope and timeline negotiation strategies",
      "triggers": ["negotiate", "trade-off", "scope discussion"]
    },
    "intervention-strategies": {
      "path": "skills/intervention-strategies.md",
      "description": "Sprint course correction strategies",
      "triggers": ["intervene", "correct", "adjust"]
    },
    "stakeholder-management": {
      "path": "skills/stakeholder-management.md",
      "description": "Autonomous stakeholder communication",
      "triggers": ["stakeholder", "communicate", "update"]
    },
    "continuous-learning": {
      "path": "skills/continuous-learning.md",
      "description": "Learning from sprint outcomes",
      "triggers": ["learn", "improve", "adapt"]
    }
  },

  "hooks": {
    "onSprintStart": {
      "script": "hooks/scripts/initialize-autopilot.sh",
      "description": "Initializes autonomous sprint management"
    },
    "onDailyStandup": {
      "script": "hooks/scripts/daily-rebalance.sh",
      "description": "Performs daily workload rebalancing"
    },
    "onBlockerDetected": {
      "script": "hooks/scripts/blocker-intervention.sh",
      "description": "Triggers intervention on blocker detection"
    },
    "onVelocityDrop": {
      "script": "hooks/scripts/velocity-response.sh",
      "description": "Responds to velocity drops with adjustments"
    },
    "onScopeChange": {
      "script": "hooks/scripts/scope-analysis.sh",
      "description": "Analyzes and responds to scope changes"
    },
    "onSprintEnd": {
      "script": "hooks/scripts/learning-capture.sh",
      "description": "Captures learnings for model improvement"
    }
  },

  "permissions": {
    "filesystem": [
      { "path": ".claude/sprint-ai/**", "access": "readwrite" }
    ],
    "tools": ["Bash", "Read", "Write", "Task", "Grep", "Glob"],
    "mcpServers": ["jira", "github"]
  },

  "configuration": {
    "schema": {
      "type": "object",
      "properties": {
        "autonomyLevel": {
          "type": "string",
          "enum": ["advisor", "assistant", "partner", "autopilot"],
          "default": "assistant"
        },
        "rebalanceFrequency": {
          "type": "string",
          "enum": ["manual", "daily", "continuous"],
          "default": "daily"
        },
        "blockerPredictionHorizon": {
          "type": "number",
          "default": 5,
          "description": "Days ahead to predict blockers"
        },
        "maxAutonomousScopeChange": {
          "type": "number",
          "default": 10,
          "description": "Max percentage scope change without approval"
        },
        "learningEnabled": {
          "type": "boolean",
          "default": true
        },
        "notificationVerbosity": {
          "type": "string",
          "enum": ["minimal", "normal", "verbose"],
          "default": "normal"
        }
      }
    }
  },

  "activation": {
    "auto": false,
    "priority": 900,
    "conditions": {
      "keywords": ["autonomous", "autopilot", "self-manage", "auto sprint", "ai sprint"]
    }
  }
}
