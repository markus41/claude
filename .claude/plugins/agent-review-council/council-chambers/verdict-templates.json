    },
    "integration": {
      "name": "Integration",
      "icon": "üîó",
      "color": "yellow",
      "severityDefault": "medium",
      "examples": ["API contract violations", "Breaking changes", "Missing error handling", "Incompatible dependencies"]
    },
    "accessibility": {
      "name": "Accessibility",
      "icon": "‚ôø",
      "color": "teal",
      "severityDefault": "medium",
      "examples": ["Missing ARIA labels", "Keyboard navigation issues", "Color contrast problems", "Screen reader incompatibility"]
    }
  },
  "severityLevels": {
    "critical": {
      "name": "Critical",
      "emoji": "üö®",
      "color": "red",
      "priority": "P0",
      "blocksMerge": true,
      "requiresImmediate": true,
      "examples": ["Security vulnerabilities", "Data loss bugs", "Production outages"]
    },
    "high": {
      "name": "High",
      "emoji": "‚ö†Ô∏è",
      "color": "orange",
      "priority": "P1",
      "blocksMerge": true,
      "requiresImmediate": false,
      "examples": ["Performance regressions", "Major bugs", "Breaking changes without migration"]
    },
    "medium": {
      "name": "Medium",
      "emoji": "üìù",
      "color": "yellow",
      "priority": "P2",
      "blocksMerge": false,
      "requiresImmediate": false,
      "examples": ["Code quality issues", "Minor bugs", "Missing tests"]
    },
    "low": {
      "name": "Low",
      "emoji": "üí°",
      "color": "blue",
      "priority": "P3",
      "blocksMerge": false,
      "requiresImmediate": false,
      "examples": ["Style improvements", "Documentation updates", "Refactoring suggestions"]
    },
    "info": {
      "name": "Informational",
      "emoji": "‚ÑπÔ∏è",
      "color": "gray",
      "priority": "P4",
      "blocksMerge": false,
      "requiresImmediate": false,
      "examples": ["Observations", "Best practice suggestions", "Future considerations"]
    }
  },
  "confidenceLevels": {
    "very-high": {
      "range": [0.9, 1.0],
      "description": "Unanimous or near-unanimous agreement, thorough analysis",
      "emoji": "üíØ"
    },
    "high": {
      "range": [0.75, 0.9],
      "description": "Strong majority agreement, comprehensive review",
      "emoji": "‚úÖ"
    },
    "medium": {
      "range": [0.5, 0.75],
      "description": "Majority agreement but significant dissent or incomplete analysis",
      "emoji": "‚öñÔ∏è"
    },
    "low": {
      "range": [0.25, 0.5],
      "description": "Weak majority or split opinions, insufficient information",
      "emoji": "‚ö†Ô∏è"
    },
    "very-low": {
      "range": [0.0, 0.25],
      "description": "No clear consensus, major disagreements or uncertainty",
      "emoji": "‚ùì"
    }
  }
}
