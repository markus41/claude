{
  "name": "jira-orchestrator",
  "version": "1.1.0",
  "description": "Intelligent Jira issue orchestration - automatically selects and coordinates sub-agents to explore, plan, code, test, fix, and commit solutions for Jira issues",
  "author": {
    "name": "Brookside BI",
    "email": "dev@brooksidebi.com"
  },
  "keywords": [
    "jira",
    "confluence",
    "orchestration",
    "automation",
    "development",
    "workflow",
    "agile",
    "oauth",
    "sso"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/markus41/jira-orchestrator"
  },
  "scripts": {
    "postInstall": "./scripts/install.sh",
    "postInstallVerify": "./scripts/post-install.sh",
    "auth": "./scripts/oauth-auth.sh"
  },
  "mcpServers": {
    "atlassian": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.atlassian.com/v1/sse"],
      "autoInstall": true,
      "required": true,
      "authentication": {
        "type": "oauth2.1",
        "flow": "browser-sso",
        "description": "Uses your organization's SSO/OAuth. Browser opens automatically for authentication."
      }
    }
  }
}
